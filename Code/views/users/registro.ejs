<!DOCTYPE html>
<html>
<head>  
    <title>Registro</title>
    <%- include('../partials/head')%>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="main-users">  
        <div class="div-users">
            <h2> Registrate</h2>
            
            <form action="/user/registro" method="POST" enctype="multipart/form-data">
                <div class= "form-box" >
                    <% if (locals.errors && errors.nombre){ %>
                        <label><%= errors.nombre.msg %></label><br>
                        <%}%> 
                    <input type="text" id="nombre" name= "nombre" placeholder="Nombre" autocomplete="true">
                </div>
                
                <div class="form-box">
                    <% if (locals.errors && errors.apellido){ %>
                        <label><%= errors.apellido.msg %></label><br>
                        <%}%> 
                    <input type="text" id="apellido" name= "apellido" placeholder="Apellido" autocomplete="true">
                </div>
                
                <div class="form-box">
                    <% if (locals.errors && errors.email){ %>
                        <label><%= errors.email.msg %></label><br>
                        <%}%> 
                    <input type="text" name="email" id="email" placeholder="Email" autocomplete="true">
                </div>
                
                <div class="form-box">
                    <% if (locals.errors && errors.password){ %>
                        <label><%= errors.password.msg %></label><br>
                        <%}%> 
                    <input type="password" name="password" id="password" placeholder="Contraseña"
                    autocomplete="true" required>
                </div>
                
                <div class="form-box">
                    <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Repetir Contraseña"
                    autocomplete="true" required>
                </div>

                <div class="form-box">
                    <p> Agrega una foto de perfil: </p>
                    <input type="file" name="avatar" id= "avatar" required>
               </div>
                
                <div>
                    <button class="boton boton-primary" type="submit">
                        <a href="/index"></a>Registrate
                    </button>
                    <button class="boton boton-secondary" type="reset">Borrar</button>
                </div>

                
                 
                    <a class="form-link" href="/user/login">¿Ya tenes cuenta? Ingresa aca</a>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        
    </body>
    </html>